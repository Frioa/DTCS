<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL_PeopleInformation"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_fileitemHead"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:background="@drawable/button_dayborde" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4.2dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.95">

                <TextView
                    android:id="@+id/TV_competitemName"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8.5dp"/>
                <TextView
                    android:id="@+id/TV_competitemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="(415417070110) "
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrayFonts"
                    />
                <TextView
                    android:id="@+id/TV_competitemGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="  成绩:150.25  "
                    android:background="@drawable/textview_tab03borde"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                  android:orientation="vertical"
                    android:gravity="right">


                    <TextView
                        android:id="@+id/TV_competitemSymbol"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="批次:4"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="top"
                        android:layout_marginTop="15dp"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TV_competitemMajor"
                    android:layout_marginLeft="4dp"
                    android:text="计算机科学与技术 1班"
                    android:gravity="center|left"
                    android:textSize="14sp"
                    android:layout_weight="0.4"/>


                <TextView
                    android:id="@+id/TV_competitemDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="电子信息系"
                    android:textColor="@color/colorGrayFonts"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/textView4" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
