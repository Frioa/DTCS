<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL_PeopleInformation"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_fileitemHead"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:background="@drawable/button_dayborde" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4.2dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.95">

                <TextView
                    android:id="@+id/TV_lessonitemName"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8.5dp"/>
                <TextView
                    android:id="@+id/TV_lessontitemteach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="讲课人 "

                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:id="@+id/TV_lessontitemStaus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text=" 开课 "
                    android:background="@drawable/textview_tab03borde"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/TV_lessontitemStaus0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text=" 结课 "
                    android:background="@drawable/textview_tab03borde1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    />





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                  android:orientation="vertical"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/TV_lessonitemID"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID:1110"
                        android:textSize="15dp"
                        android:gravity="right"
                        android:textColor="@color/colorGrayFonts"
                        android:layout_gravity="top"
                        android:layout_marginTop="2.5dp"
                        />
                    <TextView
                        android:id="@+id/TV_lessonitemType"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="实践"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="top"
                        android:layout_marginTop="2.5dp"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TV_lessonitemDate"
                    android:layout_marginLeft="4dp"
                    android:text="开课日期  2015-10-12"
                    android:gravity="center|left"
                    android:textSize="13sp"
                    android:layout_weight="0.85"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/TV_lessonitempoint"
                    android:layout_marginLeft="4dp"
                    android:text="绩点: 5"
                    android:gravity="center|left"
                    android:textSize="14sp"
                    android:textColor="@color/colorGrayFonts"
                    android:layout_weight="1.45"/>

                <TextView
                    android:id="@+id/TV_lessonitemLongs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.3"
                    android:gravity="center|right"
                    android:text="课时:10"
                    android:textColor="@color/colorGrayFonts"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.82"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/textView4" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
