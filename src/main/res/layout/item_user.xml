<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL_PeopleInformation"
        android:layout_width="match_parent"
        android:layout_marginTop="2.5dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_itemHead0"
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_dayborde"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4.2dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0.95">

                <TextView
                    android:id="@+id/TV_itemUserName0"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8.5dp"/>

                <TextView
                    android:id="@+id/TV_itemPrank0"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/textview_tab03borde"
                    android:text="@string/Personage_shiyan"
                    android:gravity="center"
                    android:textColor="#fff"
                    />

                <TextView
                    android:id="@+id/TV_itemRemark0"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/textview_tab03borde"
                    android:text="@string/Personage_shiyan"
                    android:gravity="center"
                    android:textColor="#fff"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/TV_itemYear0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015"
                        android:textSize="12dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="2.5dp"
                        />
                    <ImageView
                        android:id="@+id/IV_itemIcon0"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="top"/>

                </LinearLayout>
                 </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/TV_itemNumber0"
                    android:layout_marginLeft="4dp"
                   />

                <TextView
                    android:id="@+id/TV_itemDepart0"
                    android:gravity="center|right"
                    android:textColor="@color/colorGrayFonts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.72"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:id="@+id/textView4" />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
