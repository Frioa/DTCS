<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/LL_tab03Header"
            android:gravity="center"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TV_tip"
            android:text="@string/Tool_tip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TV_lastupdata_time"
                />
        </LinearLayout>
            <ImageView
                android:id="@+id/TV_tab02RefreshArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_downflash"
                android:layout_toLeftOf="@+id/LL_tab03Header"
                android:layout_marginRight="18dp"

                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PB_RefreshProgressBar"
                android:visibility="gone"
                android:layout_toLeftOf="@+id/LL_tab03Header"
                android:layout_marginRight="20dp"
                style="?android:attr/progressBarStyleSmallTitle"
                />



    </RelativeLayout>

</LinearLayout>
