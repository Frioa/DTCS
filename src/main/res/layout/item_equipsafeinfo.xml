<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL_PeopleInformation"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="52dp"
        android:gravity="center"

        android:background="#fff"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/item_equipsafeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张燕花"
        android:textColor="#000"
        android:textSize="24dp"
        android:gravity="center|left"
        android:layout_marginLeft="20dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:gravity="center|left">
            <TextView
                android:id="@+id/item_equipsafe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 合格 "
                android:textSize="16dp"
                android:gravity="center|left"
                android:layout_marginLeft="12dp"
                android:textColor="#fff"
                android:background="@drawable/textview_tab03borde"
               />
            <TextView
                android:id="@+id/item_equipsafe0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 不合格 "
                android:textSize="16dp"
                android:gravity="center|left"
                android:textColor="#fff"
                android:background="@drawable/textview_tab03borde1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_equipsafeDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:text="2018-05-5"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>
