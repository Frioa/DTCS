<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/LL_me"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorFonts"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_dayborde"
            android:src="@mipmap/dtcs_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Personage_person"
            android:textColor="#fff"
            android:textSize="24sp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL_PeopleInformation"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IV_head"
            android:layout_width="75dp"
            android:layout_height="72dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_dayborde"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/TV_user"
                    android:layout_width="wrap_content"
                    android:gravity="top"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8.5dp"/>

                <TextView
                    android:id="@+id/TV_Prank"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/textview_tab03borde"
                    android:text="@string/Personage_shiyan"
                    android:gravity="center"
                    android:textColor="#fff"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:background="@drawable/textview_tab03borde"
                    android:text=" 实习 "
                    android:textColor="#fff"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:id="@+id/TV_PRemark" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="-4dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/TVNumber"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:id="@+id/textView4" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="60dp"
            android:background="#000">

            <ImageView
                android:id="@+id/IV_code"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_Information"
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/personage_message"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16.5dp"
            android:gravity="center|left"
            android:text="@string/Personage_message"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_Grade"
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_marginTop="0.75dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/personage_grade"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16.5dp"
            android:gravity="center|left"
            android:text="@string/Personage_grade"
            android:id="@+id/textView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:id="@+id/LL_reFresh"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/personage_refresh"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16.5dp"
            android:gravity="center|left"
            android:text="@string/Personage_refresh"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_Setting"
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_marginTop="0.85dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/personage_setting"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16.5dp"
            android:gravity="center|left"
            android:text="@string/Personage_setting"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/LL_Regardto"
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_marginTop="0.85dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/personage_regard"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16.5dp"
            android:gravity="center|left"
            android:text="@string/Personage_regard"
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/linear_record_historylist"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_height="40dp"
        android:id="@+id/LL_exit"
         >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@mipmap/personage_exit"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="16.5dp"
            android:textColor="#000"
            android:gravity="center|left"
            android:text="@string/Personage_exit"/>

    </LinearLayout>



</LinearLayout>