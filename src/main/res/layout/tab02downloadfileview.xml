<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff">

        <ImageView
            android:id="@+id/IV_tab02Returnview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/linear_record_historylist"
            android:src="@mipmap/return_arrows"
            android:descendantFocusability="blocksDescendants"
            />

        <TextView
            android:id="@+id/TV_DownloadTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Tool_DownloadFile"
            android:textColor="#000"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist">
                <LinearLayout
                    android:id="@+id/LL_PeopleInformation"
                    android:layout_width="match_parent"
                    android:layout_marginTop="2.5dp"
                    android:layout_height="72dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IV_fileitemViewHead"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_dayborde" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="4.2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_weight="0.95">
                            <TextView
                                android:id="@+id/TV_fileitemViewUserName"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="8.5dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/TV_fileitemViewID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID:3"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorGrayFonts"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="8dp"
                                    />
                                <ImageView
                                    android:id="@+id/IV_itemIcon0"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_gravity="top"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="-4dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/TV_flieitemDateView"
                                android:layout_marginLeft="4dp"
                                android:text="A0415"
                                android:gravity="center|left"
                                android:textSize="14sp"
                                android:layout_weight="1"/>
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/textView4" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/view_desricpt"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/textView5" />

                <TextView
                    android:id="@+id/TV_fileDesriptView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:text=""
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/view_type"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/textView6" />

                <TextView
                    android:id="@+id/TV_fileTypeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/view_size"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:id="@+id/textView7" />

                <TextView
                    android:id="@+id/TV_fileSizeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:text=""
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/view_remark"
                    android:gravity="center|top"
                    android:textSize="18sp"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text=""
                    android:gravity="top"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:id="@+id/TV_fileRemarkView" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.45dp"
            android:background="#bfbfbf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <LinearLayout
                android:id="@+id/LL_tab02FileDown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/flie_down"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_down"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LL_tab02Filepause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/flie_pause1"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_pause1"
                    android:textColor="#000"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_tab02FileCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/linear_record_historylist"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/file_cancel"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_cancel"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/textView10" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
